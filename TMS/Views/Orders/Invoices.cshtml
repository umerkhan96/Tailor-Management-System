@{
    ViewData["Title"] = "Invoices";
}
<div class="content-wrapper">
    @await Component.InvokeAsync("BreadCrumb", new { Title = localizer["Invoices"], From = localizer["Home"], To = localizer["Invoices"] })

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Order/Invoice Number</label>
                    <input id="txtInvNumber" type="number" class="form-control" step="1" placeholder="Enter Order or Invoice Number..." />
                </div>
                <div class="form-group col-md-4">
                    <label>&nbsp;</label><br />
                    <button type="button" class="btn btn-outline-primary" onclick="OrdersManager.GetInvoice()"> <i class="fa fa-search"></i> Search</button>
                    &nbsp;
                    <button type="button" class="btn btn-outline-success d-none" onclick="OrdersManager.DownloadInvoice()" id="btnDownload"> <i class="fa fa-download"></i> Download</button>
                </div>
            </div>
            <div class="container p-5" id="dvInvoice">
            </div>
        </div>
    </section>
</div>
<script src="~/js/order-manager.js" asp-asp-append-version="true"></script>


