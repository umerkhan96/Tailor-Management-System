@{
    ViewData["Title"] = "Orders";
}
<div class="content-wrapper">
    @await Component.InvokeAsync("BreadCrumb", new { Title = localizer["Orders"], From = localizer["Home"], To = localizer["Orders"] })


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">List of Orders</h3>
                            <button class="btn btn-info btn-sm float-right" onclick="OrdersManager.LoadSaveForm(0)"><i class="fa fa-plus"></i> Take New Order</button>
                        </div>

                        <div class="card-body">
                            <table id="dtOrders" class="table table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>Sr No</th>
                                        <th>Order No</th>
                                        <th>Customer ID</th>
                                        <th>Customer Name</th>
                                        <th>Order Date</th>
                                        <th>Return Date</th>
                                        <th>Total Amount</th>
                                        <th>Paid Amount</th>
                                        <th>Balance</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/js/order-manager.js" asp-asp-append-version="true"></script>
<script>
    $(document).ready(function () {
        OrdersManager.LoadDataTable();
    })
</script>